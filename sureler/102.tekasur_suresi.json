  "result": [
    {
      "id": "6166",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "1",
      "arabic_text": "اَلْهٰيكُمُ التَّكَاثُرُۙ",
      "translation": "Çoğaltma/Çokluk hırsı, sizi oyalayıp (Allah’a hakkıyla kulluk etmekten) alıkoydu.",
      "footnotes": null
    },
    {
      "id": "6167",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "2",
      "arabic_text": "حَتّٰى زُرْتُمُ الْمَقَابِرَۜ",
      "translation": "(Bu, sizlerin ölüp) kabirleri ziyaret etmenize kadar devam etti. (Ya da; “Kimin ölüsü daha çok diye, ölüleri saymaya kadar vardırdınız işi.”)",
      "footnotes": null
    },
    {
      "id": "6168",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "3",
      "arabic_text": "كَلَّا سَوْفَ تَعْلَمُونَۙ",
      "translation": "Asla! Pek yakında bileceksiniz/anlayacaksınız.",
      "footnotes": null
    },
    {
      "id": "6169",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "4",
      "arabic_text": "ثُمَّ كَلَّا سَوْفَ تَعْلَمُونَۜ",
      "translation": "Sonra bin kere asla! Pek yakında bileceksiniz/anlayacaksınız.",
      "footnotes": null
    },
    {
      "id": "6170",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "5",
      "arabic_text": "كَلَّا لَوْ تَعْلَمُونَ عِلْمَ الْيَق۪ينِۜ",
      "translation": "Asla! (Çokluk hırsından sakının.) Şayet kesin bir bilgiyle bilirseniz,",
      "footnotes": null
    },
    {
      "id": "6171",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "6",
      "arabic_text": "لَتَرَوُنَّ الْجَح۪يمَۙ",
      "translation": "Elbette, o cehennemi göreceksiniz.",
      "footnotes": null
    },
    {
      "id": "6172",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "7",
      "arabic_text": "ثُمَّ لَتَرَوُنَّهَا عَيْنَ الْيَق۪ينِۙ",
      "translation": "Sonra elbette, kesin olarak göreceksiniz.",
      "footnotes": null
    },
    {
      "id": "6173",
      "suraNo": "102",
      "suraName": "Tekasûr",
      "aya": "8",
      "arabic_text": "ثُمَّ لَتُسْـَٔلُنَّ يَوْمَئِذٍ عَنِ النَّع۪يمِ",
      "translation": "Sonra da o gün, (size verilmiş) nimetlerden sorguya çekileceksiniz.",
      "footnotes": null
    }
  ]
}